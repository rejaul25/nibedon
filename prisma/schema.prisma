generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  chairman
  member
}

enum ShareType {
  fullShare
  newMember
}

enum PaymentMethod {
  bKash
  Nagad
  Bank
}

enum AuditAction {
  MEMBER_CREATED
  MEMBER_UPDATED
  MEMBER_DELETED
  PAYMENT_CREATED
  PAYMENT_UPDATED
  PAYMENT_DELETED
  INVESTMENT_CREATED
  INVESTMENT_UPDATED
  INVESTMENT_DELETED
  MEMBERSHIP_ID_GENERATED
}

model User {
  id             String       @id @default(uuid())
  membershipId   String       @unique
  name           String
  fatherName     String
  mobile         String
  passwordHash   String
  role           Role         @default(member)
  shareType      ShareType?
  isDeleted      Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  payments       Payment[]
  createdPayments Payment[]   @relation("PaymentCreator")
  auditLogs      AuditLog[]
  resetTokens    PasswordResetToken[]
  
  @@index([membershipId])
  @@index([name])
  @@index([role])
}

model Payment {
  id                String        @id @default(uuid())
  membershipId      String
  amount            Float
  date              DateTime
  paymentFrom       PaymentMethod
  transactionNumber String?
  createdById       String
  updatedBy         String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  member            User          @relation(fields: [membershipId], references: [membershipId], onDelete: Cascade)
  createdBy         User          @relation("PaymentCreator", fields: [createdById], references: [id])
  
  @@index([membershipId])
  @@index([date])
}

model MembershipId {
  id            String    @id @default(uuid())
  membershipId  String    @unique
  assignedTo    String?
  isDeleted     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  
  @@index([membershipId])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([userId])
}

model AuditLog {
  id              String      @id @default(uuid())
  action          AuditAction
  performedBy     String
  targetType      String
  targetId        String?
  changeSummary   String
  metadata        String?
  createdAt       DateTime    @default(now())
  
  user            User        @relation(fields: [performedBy], references: [id])
  
  @@index([performedBy])
  @@index([action])
  @@index([createdAt])
}

model Investment {
  id          String   @id @default(uuid())
  title       String
  description String
  amount      Float
  date        DateTime
  purpose     String
  createdBy   String
  updatedBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([date])
  @@index([createdAt])
}
